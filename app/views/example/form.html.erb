<%= form_tag '/example/form', method: :post do %> 
  <p>
    Full Name:
    <%= text_field_tag :full_name %> 
  </p>

  <p>
    Phone: 
    <%= text_field_tag :phone %> 
  </p>

  <p>
    Hobby: 
    <%= text_field_tag :hobby %> 
  </p>

  <p>
    Years Experience: 
    <%= number_field_tag :years_experience %> 
  </p>

  <p>
    Available Date:
    <%= number_field_tag :available_date %> 
  </p>

  <%= submit_tag 'create job application' %> 
<% end %> 